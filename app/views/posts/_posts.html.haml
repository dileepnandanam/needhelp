.questions-container
  .group-action
    = link_to 'New post', new_post_path, remote: true, class: 'new-group-post'
  .new-post
  .posts
    - posts.each do |p|
      = render partial: 'posts/post', locals: {post: p}
  .more-responses
  - if @posts.next_page
    = link_to 'View more', posts_path(page: (params[:page].present? ? params[:page].to_i + 1 : 2)), remote: true, class: 'view-more'
