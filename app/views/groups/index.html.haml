.my-space.col-lg-4.col-sm-6.col-12.pull-left
  .responses-container
    %h3.white My groups
    - @groups.each do |group|
      = render partial: 'group', locals: {group: group, actions: true}
    - @other_groups.each do |group|
      = render partial: 'group', locals: {group: group, actions: false}
  .new-question
  .questions-actions
    = link_to 'New group', new_group_path, class: 'add-question', remote: true

.my-space.col-lg-8.col-sm-6.col-12.pull-left
  %h3.white
    Find Groups
  .search.white.pull-right
    Search
    = text_field_tag 'search',nil, data: {url: search_groups_path(page: 1)}
  .clearfix
  .questions
    = render partial: 'groups/groups', locals: {groups: Group.order('created_at DESC').paginate(page: 1, per_page: 5)}
